{
  "Account": {
    "ShowLogoutPrompt": false
  },
  "Settings": {
    "Namespaces": [
      {
        "Namespace": "Authentication.Local",
        "Types": [
          {
            "Name": "Authentication.Local.Repositories.UserRepository",
            "Commands": {
              "FindByUserName": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [Id],[Username],[Password],[FirstName],[Surname],[Email],[DateOfBirth],[UpdatedOn] FROM [samples].[dbo].[User] where [Username]=@username",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          },
          {
            "Name": "Authentication.Local.Repositories.UserClaimsRepository",
            "Commands": {
              "FindClaimsByUsername": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [Id],[UserId],[Type],[Value],[ValueType],[Issuer] FROM [samples].[dbo].[UserClaims] where [UserId]=(select [u].[Id] from [samples].[dbo].[User] [u] where [u].[username]=@username)",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          },
          {
            "Name": "Authentication.Local.Infrastructure.Logging.DatabaseLogger",
            "Commands": {
              "Log": {
                "ConnectionAlias": "samples",
                "CommandText": "insert into [dbo].[Log] ([date],eventId,[level],logger,[message],exception) select @date,@eventId,@level,@logger,@message,@exception",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          }
        ]
      }
    ],
    "Connections": [
      {
        "Alias": "samples",
        "ConnectionString": "Data Source=(LocalDb)\\mssqllocaldb;Initial Catalog=samples;Integrated Security=true;"
      }
    ]
  }
}
