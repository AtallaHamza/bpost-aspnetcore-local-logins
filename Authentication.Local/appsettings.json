{
  "AuthSettings": {
    "Age": 18,
    "Domains": [
      "gmail",
      "email",
      "hotmail"
    ]
  },
  "Roles": {
    "Admin": "Admin",
    "Author": "Author",
    "Moderator": "Moderator"
  },
  "Account": {
    "ShowLogoutPrompt": false
  },
  "Settings": {
    "Namespaces": [
      {
        "Namespace": "Authentication.Local",
        "Types": [
          {
            "Name": "Authentication.Local.Repositories.UserRepository",
            "Commands": {
              "FindByUserName": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [u].[Id],[u].[UserName],[u].[Password],[u].[FirstName],[u].[Surname],[u].[Email],[u].[DateOfBirth],[m].[Role] FROM [dbo].[User] [u] inner join [dbo].[Members] [m] on [m].[UserName] = [u].[Username] where [u].[Username]=@username",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          },
          {
            "Name": "Authentication.Local.Repositories.UserClaimsRepository",
            "Commands": {
              "FindClaimsByUserId": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [Id],[UserId],[Type],[Value],[ValueType],[Issuer] FROM [samples].[dbo].[UserClaims] where [UserId]=@userId",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          },
          {
            "Name": "Authentication.Local.Repositories.MemberRepository",
            "Commands": {
              "FindAllMembersAsync": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [Id],[UserName],[Role],[IsFrozen]FROM [samples].[dbo].[Members]",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              },
              "FindMemberByUserNameAsync": {
                "ConnectionAlias": "samples",
                "CommandText": "SELECT [Id],[UserName],[Role],[IsFrozen]FROM [samples].[dbo].[Members] where UserName=@username",
                "CommandTimeout": 30,
                "CommandType": 1,
                "Flags": 1
              }
            }
          }
        ]
      }
    ],
    "Connections": [
      {
        "Alias": "samples",
        "ConnectionString": "Data Source=(LocalDb)\\mssqllocaldb;Initial Catalog=samples;Integrated Security=true;"
      }
    ]
  }
}
